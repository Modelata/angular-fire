{
  "compilerOptions": {
    "strict": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "target": "es2015",
    "declaration": true,
    "types": [],
    "lib": [
      "dom",
      "es2018"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
  ],
}